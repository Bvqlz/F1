#include "src/Request.h"
#include "src/Response.h"
#include <memory>

int main()
{
    const Request request;
    std::unique_ptr<ResBuild> processor; //create a resbuild pointer

    int year1 = 2025;
    std::string subPath1 = "constructorstandings/";
    std::string jsonResponse = request.createRequest(year1, subPath1);

    processor = std::make_unique<ConstructorStandings>(); // creates a constructor standing object.
    processor->process(jsonResponse); //Since processer points to this object that is derived from it, it calls the correct process function.
}